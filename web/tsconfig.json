{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* Path setup */
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],

      // special paths for convenience
      "@components/sandpack": ["src/components/docs/sandpack/Sandpack.astro"]
    }
  }
}
