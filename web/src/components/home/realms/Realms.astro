---
import { getCollection, getEntry } from "astro:content";
import Section from "../../../layouts/home/Section.astro";
import RealmItem from "./RealmItem.astro";

let allRealms = await getCollection("realms");
---

<Section class="realms">
  <div class="name">
    <p>ryuuart::</p>
  </div>
  <header id="realms">
    <h2>3 Realms</h2>
    <p>visions&nbsp;•&nbsp;dreams&nbsp;•&nbsp;self</p>
    <p class="description">
      There are untold ways to use <span class="manawave-text">manawave</span>.
      I offer to you 3 examples, 3 very different realms. See ways to wield <span
        class="manawave-text">manawave</span
      > by visiting each one.
    </p>
  </header>
  <ul>
    {
      allRealms.map(async (realm) => {
        const author = await getEntry(realm.data.author);

        return (
          <li>
            <RealmItem
              title={realm.data.title}
              tagline={realm.data.tagline}
              url={`/realms/${realm.slug}`}
              color={realm.data.color.portal}
              author={author.data}
            />
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  section.realms {
    grid-template-rows: auto auto auto;
  }

  .name {
    grid-column: 1 / 1 / 2 / 2;

    display: flex;
    justify-content: end;

    margin-right: 0.5rem;
  }

  header {
    grid-area: 1 / 2 / 2 / 5;

    margin-left: 1rem;
  }

  ul {
    grid-area: 2 / 2 / 3 / 6;

    padding: 0;

    display: flex;
    flex-flow: column nowrap;

    gap: 2rem;

    margin: 4rem 0;
    margin-left: 1rem;
  }

  li {
    list-style: none;
  }

  h2 {
    text-transform: uppercase;

    margin: 0;
    margin-bottom: -0.5rem;
  }

  p {
    margin: 0;

    font-size: 0.75rem;
  }

  .description {
    font-size: 1rem;
    margin: 1rem auto;
  }
</style>
