---
import Section from "../../../layouts/home/Section.astro";
import realmsData from "./realms.json";
import RealmItem from "./RealmItem.astro";
---

<Section class="realms">
  <div class="name">
    <p>ryuuart::</p>
  </div>
  <header>
    <h2>5 Realms</h2>
    <p>visions&nbsp;•&nbsp;dreams&nbsp;•&nbsp;self</p>
  </header>
  <ul>
    {
      realmsData.map((i) => (
        <li>
          <RealmItem title={i.title} tagline={i.tagline} url={i.url} />
        </li>
      ))
    }
  </ul>
  <footer>
    <small>
      Copyright &copy; 2023 Long Nguyen.
      <br />
      All rights reserved.
    </small>
  </footer>
</Section>

<style>
  section.realms {
    /* margin-top: 1rem; */
    grid-row: realms-start / realms-end;
    grid-template-rows: auto auto auto;
  }

  .name {
    grid-column: 1 / 1 / 2 / 2;

    display: flex;
    justify-content: end;

    margin-right: 0.5rem;
  }

  header {
    grid-area: 1 / 2 / 2 / 5;

    margin-left: 1rem;
  }

  ul {
    grid-area: 2 / 2 / 3 / 6;

    padding: 0;

    display: flex;
    flex-flow: column nowrap;

    gap: 2rem;

    margin-left: 1rem;
  }

  li {
    list-style: none;
  }

  h2 {
    text-transform: uppercase;

    margin: 0;
    margin-bottom: -0.5rem;
  }

  p {
    margin: 0;

    font-size: 0.75rem;
  }

  footer {
    grid-area: -2 / 2 / span 1 / 6;

    font-size: 0.75rem;

    margin-left: 1rem;
  }

  small {
    font-size: 0.75rem;
  }
</style>
