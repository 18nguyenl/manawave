---
import Section from "../../../layouts/home/Section.astro";
import Header from "./Header.astro";
import Primordia from "./Primordia.astro";
---

<Section class="hero">
  <Header />
  <div class="spacer"></div>
  <div class="cta-desc">
    <p>
      <span class="manawave-text">Manawave</span> is a controllable, configurable,
      and omnidirectional marquee defined with only HTML & CSS. It has zero dependencies
      and is built on vanilla JavaScript.
    </p>
  </div>
  <div class="cta">
    <div><a href="/docs">Get Started</a></div>
    <div><a href="https://github.com/ryuuart/manawave">Github</a></div>
  </div>
  <Primordia class="primordia" />
</Section>

<style>
  p {
    margin: 0;
    margin-bottom: 1rem;
  }

  .hero {
    grid-template-rows: auto auto auto auto;
  }

  .spacer {
    grid-area: 2 / 1 / 3 / 6;

    height: 40vh;
    max-height: 20rem;
  }

  .cta-desc {
    grid-area: 3 / 2 / 4 / 5;

    margin-left: 1rem;
  }

  .cta {
    grid-area: 4 / 2/ 5 / 5;

    position: relative;

    margin-left: 1rem;
    margin-top: 1rem;
  }

  .cta > div {
    margin-bottom: 0.5rem;
  }

  .cta::before {
    display: block;
    content: "";

    width: 0.25rem;
    height: 85%;

    position: absolute;
    top: 0.75rem;
    left: -1.25rem;

    background: var(--color-fg);
  }

  .primordia {
    grid-area: 2 / 1 / 4 / 2;
    justify-self: end;
  }

  a {
    text-transform: uppercase;
    text-decoration: underline;
  }
</style>
