---
import Section from "../../../layouts/home/Section.astro";
import Header from "./Header.astro";
import Primordia from "./Primordia.astro";
---

<Section class="hero">
  <Header />
  <div class="cta-desc">
    <p>
      MANAWAVE is a controllable, configurable, and omnidirectional marquee
      defined with only HTML & CSS. It has zero dependencies and is built on
      vanilla JavaScript.
    </p>
  </div>
  <div class="cta">
    <div><a>Get Started</a></div>
    <div><a>5 Realms</a></div>
  </div>
  <Primordia />
</Section>

<style>
  p {
    margin: 0;
    margin-bottom: 1rem;
  }

  section.hero {
    margin-top: 7rem;

    grid-row: hero-start / hero-end;
    grid-template-rows: auto minmax(40vh, 18rem) auto;
  }

  .cta-desc {
    grid-area: 3 / 2 / 4 / 5;

    margin-left: 1rem;
  }

  .cta {
    grid-area: 4 / 2/ 5 / 5;

    margin-left: 1rem;
    margin-top: 1rem;
  }
</style>
