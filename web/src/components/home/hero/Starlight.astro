---
import starlightPoster from "@assets/img/starlight.webp";
---

<div aria-hidden="true" class="container behind-2">
  <video
    data-starlight-video
    muted
    loop
    playsinline
    poster={starlightPoster.src}
    aria-describedby="posteralt"
  >
    <source src="/assets/videos/starlight.webm" type="video/webm" />
    <source src="/assets/videos/starlight.mp4" type="video/mp4" />
    <div id="poster-alt">
      Foggy, blue starlight shining behind two translucent walls of text
      illuminiating only parts of the text.
    </div>
  </video>
</div>

<style>
  .container {
    grid-area: 1 / 2 / 8 / span 1;

    position: relative;
  }

  video {
    position: absolute;
    inset: 0;

    width: 100%;
    height: 100%;

    transform: scale(3);
  }
</style>

{
  /* 
Handles the problem described in 
https://stackoverflow.com/questions/8911247/hide-iphone-html5-video-play-button#comment126180552_69709669
*/
}
<script>
  const video = document.querySelector<HTMLVideoElement>(
    "[data-starlight-video]"
  )!;
  video
    .play()
    .then(() => {})
    .catch(() => {});
</script>
