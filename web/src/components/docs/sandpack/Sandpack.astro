---
import SandpackReactComponent from "./Sandpack.jsx";

interface Props {
  code?: string;
  html?: string;
  activeFile?: string;
}

const { code, html, activeFile } = Astro.props;
---

<div class="container-sandpack not-content">
  <SandpackReactComponent
    client:load
    client:only
    code={code}
    html={html}
    activeFile={activeFile}
  />
</div>

<style>
  .container-sandpack {
    margin: 1.5rem auto;
  }
</style>
