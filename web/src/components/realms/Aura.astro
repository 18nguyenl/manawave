---
import portalImage from "@assets/img/aura_portal.webp";
const { color } = Astro.props;
---

<div aria-hidden="true" class="aura">
  <div class="wrapper">
    <div class="img-container">
      <div class="img-overlay"></div>
      <img
        src={portalImage.src}
        alt="An animated loop of many small star particles swirling around"
      />
    </div>
    <div class="left-vertical-line"></div>
  </div>
</div>

<style define:vars={{ "color-aura": color }}>
  .aura {
    grid-area: 2 / 1 / 3 / 2;

    margin: 1rem;
    margin-right: 0;
  }

  .wrapper {
    position: relative;

    height: 100%;

    top: -3rem;
  }

  .img-container {
    position: relative;

    border-top: 1px solid var(--color-fg);
    border-left: 1px solid var(--color-fg);

    padding: 1.5rem;

    width: 2rem;
    height: 2rem;
  }

  .img-container > * {
    width: inherit;
    height: inherit;

    position: absolute;
    inset: 0.5rem;
  }

  .img-container > img {
    border: 1px solid var(--color-fg);
  }

  .img-overlay {
    z-index: 1;

    background: radial-gradient(var(--color-aura) 0, transparent 75%);
    border-radius: 50%;
    mix-blend-mode: overlay;
  }

  .left-vertical-line {
    height: 100%;

    border-left: 1px solid var(--color-fg);
  }
</style>
