---
interface Props {
  title: string;
  tagline: string;
}

const { title, tagline } = Astro.props;
---

<header>
  <h1>{title}</h1>
  <p>{tagline}</p>
</header>

<style>
  header {
    grid-area: 1 / 2 / span 1 / -1;

    border-bottom: 1px solid black;

    margin: 1rem;
    margin-bottom: 0;
    padding-bottom: 1rem;
  }

  h1 {
    text-transform: uppercase;

    margin: 0;
    margin-bottom: -0.5rem;
  }

  p {
    margin: 0;

    position: relative;
  }
</style>
